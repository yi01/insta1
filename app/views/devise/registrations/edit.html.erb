<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p style="text-align: center; margin-top: 30px;"><%= f.label :メールアドレス %></p><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <!-- 名前入力用のフィールドを追加 -->
  <div class="field">
    <p style="text-align: center; margin-top: 30px;"><%= f.label :名前 %></p><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <p style="text-align: center; margin-top: 30px;"><%= f.label :パスワードを変更する %></p><br />

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>

      <div class="actions" style="margin-top: 30px;">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-block"  %>
      </div>
    <% end %>
<% end %>
    <p style="text-align: center;"><%= link_to "戻る", :back %></p>
  </div>
</div>
